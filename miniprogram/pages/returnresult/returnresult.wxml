<!--pages/returnresult/returnresult.wxml-->

<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">检测结果</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">热点关注</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">防疫贴士</view>
</view>
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 检测结果 -->
    <swiper-item>
      <view class="userinfo">
        <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
        <block wx:else>
         <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
         <text class="userinfo-nickname">{{userInfo.nickName}}</text>
       </block>
      </view>
      <view class="usermotto">
        <text class="user-motto">{{motto}}</text>
      </view>
      <view class="usermotto">
        <text class="user-motto">{{parseInt(answer)}}</text>
      </view>
    </swiper-item>
    <!-- 热点新闻 -->
    <swiper-item>
      <view class='content'>
        <block wx:for="{{artlist}}">
          <view class='artImg'>
            <image src='{{item.imag}}'></image>
          </view>
          <view class='art'>{{item.art}}</view>
        </block>
    </view>
    </swiper-item>
    <!--防疫贴士-->
    <swiper-item>
      <view style='margin:10rpx'>
        <image style='width:100% ' src='img/timg.png' mode='widthFix' ></image>
      </view >
    </swiper-item>
</swiper>







    
    

  










